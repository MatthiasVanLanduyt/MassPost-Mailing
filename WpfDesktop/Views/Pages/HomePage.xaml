<Page x:Class="WpfDesktop.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDesktop.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      mc:Ignorable="d" 
        Title="HomePage">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <ui:TextBlock
                Text="MassPost Mailing Process"
                FontSize="28"
                FontTypography="Title"/>
            <ui:TextBlock
                Text="Follow the steps below to generate and validate mailing requests"
                FontSize="14"
                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        

            <!-- Step 1 -->
            <ui:Card Margin="0,0,0,16" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                            CornerRadius="20"
                            Width="40"
                            Height="40">
                        <ui:TextBlock Text="1" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <ui:TextBlock Text="Generate Mail Request File" 
                                 FontWeight="SemiBold"
                                 FontSize="16"/>
                        <ui:TextBlock Text="Upload a CSV file containing the address list and generate the mail request"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                        <ui:Badge Margin="0,8,0,0" 
                                 Content="Pending" 
                                 Appearance="Secondary"
                                 />
                    </StackPanel>

                    <ui:Button Grid.Column="2" 
                              Icon="Upload24"
                              Appearance="Secondary"
                              Command="{Binding NavigateToUploadCommand}" 
                              VerticalAlignment="Bottom">
                        Upload
                    </ui:Button>
                </Grid>
            </ui:Card>

            <!-- Step 2 -->
            <ui:Card Margin="0,0,0,16" Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                            CornerRadius="20"
                            Width="40"
                            Height="40">
                        <ui:TextBlock Text="2" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <ui:TextBlock Text="Download Mail Request and Address List" 
                                 FontWeight="SemiBold"
                                 FontSize="16"/>
                        <ui:TextBlock Text="Download the generated mail request and address list with mail ids"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                        <ui:Badge Margin="0,8,0,0" 
                                 Content="Not Available" 
                                 Appearance="Secondary"
                                 />
                    </StackPanel>



                <StackPanel Grid.Column="2" Margin="0,8,0,0" VerticalAlignment="Bottom">
                        
                        <ui:Button
                            Icon="{ui:SymbolIcon Symbol=ArrowDownload24}"
                            IsEnabled="{Binding State.HasGeneratedMailingRequest}"
                            Command="{Binding DownloadMailRequestCommand}">
                            Download Mail Request
                        </ui:Button>
                        <ui:Button 
                                   IsEnabled="{Binding State.HasGeneratedMailingRequest}"
                                   Icon="{ui:SymbolIcon Symbol=ArrowDownload24}"
                                   Command="{Binding DownloadMailAddressListCommand}">
                            Download Address List

                        </ui:Button>
                    </StackPanel>

                </Grid>
            </ui:Card>

            <!-- Step 3 -->
            <ui:Card Margin="0,0,0,16" Grid.Row="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                            CornerRadius="20"
                            Width="40"
                            Height="40">
                        <ui:TextBlock Text="3" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <ui:TextBlock Text="Validate Mail IDs" 
                                 FontWeight="SemiBold"
                                 FontSize="16"/>
                        <ui:TextBlock Text="Upload the response file and view compliance scores"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                        <ui:Badge Margin="0,8,0,0" 
                                 Content="Not Available" 
                                 Appearance="Secondary" 
                                 />
                    </StackPanel>

                    <ui:Button Grid.Column="2" 
                              Icon="{ui:SymbolIcon Symbol=CheckmarkCircle24}"
                              IsEnabled="True"
                              Command="{Binding NavigateToValidateCommand}"
                              VerticalAlignment="Bottom">
                        Validate
                    </ui:Button>
                </Grid>
            </ui:Card>
        
    </Grid>
</Page>
