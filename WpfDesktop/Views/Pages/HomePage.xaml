<Page x:Class="WpfDesktop.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDesktop.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Margin="20">
        <StackPanel>
            <ui:TextBlock Text="MassPost Mailing Process"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>

            <!-- Step 1 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                            CornerRadius="20"
                            Width="40"
                            Height="40">
                        <ui:TextBlock Text="1" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <ui:TextBlock Text="Upload Address List" 
                                 FontWeight="SemiBold"
                                 FontSize="16"/>
                        <ui:TextBlock Text="Upload a CSV file containing the address list for processing"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                        <ui:Badge Margin="0,8,0,0" 
                                 Content="Pending" 
                                 Appearance="Secondary"
                                 />
                    </StackPanel>

                    <ui:Button Grid.Column="2" 
                              Icon="Upload24"
                              Appearance="Primary"
                              Command="{Binding NavigateToUploadCommand}">
                        Upload
                    </ui:Button>
                </Grid>
            </ui:Card>

            <!-- Step 2 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                            CornerRadius="20"
                            Width="40"
                            Height="40">
                        <ui:TextBlock Text="2" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <ui:TextBlock Text="Generate Mail IDs" 
                                 FontWeight="SemiBold"
                                 FontSize="16"/>
                        <ui:TextBlock Text="Generate Mail IDs for the addresses and download the updated files"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                        <ui:Badge Margin="0,8,0,0" 
                                 Content="Not Available" 
                                 Appearance="Secondary"
                                 />
                    </StackPanel>

                    <ui:Button Grid.Column="2" 
                              Icon="ArrowDownload24"
                              IsEnabled="False"
                              Command="{Binding NavigateToGenerateCommand}">
                        Generate
                    </ui:Button>
                </Grid>
            </ui:Card>

            <!-- Step 3 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                            CornerRadius="20"
                            Width="40"
                            Height="40">
                        <ui:TextBlock Text="3" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <ui:TextBlock Text="Validate Mail IDs" 
                                 FontWeight="SemiBold"
                                 FontSize="16"/>
                        <ui:TextBlock Text="Upload the response file and view compliance scores"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                        <ui:Badge Margin="0,8,0,0" 
                                 Content="Not Available" 
                                 Appearance="Secondary"
                                 />
                    </StackPanel>

                    <ui:Button Grid.Column="2" 
                              Icon="CheckmarkCircle24"
                              IsEnabled="False"
                              Command="{Binding NavigateToValidateCommand}">
                        Validate
                    </ui:Button>
                </Grid>
            </ui:Card>
        </StackPanel>
    </Grid>
</Page>
