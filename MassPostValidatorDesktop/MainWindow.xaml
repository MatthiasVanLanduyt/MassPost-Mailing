<Window x:Class="MassPostValidatorDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassPostValidatorDesktop"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
           
        </Grid.RowDefinitions>

        <Expander x:Name="OptionsExpander" Grid.Row="0" Header="Options" Margin="10" IsExpanded="True">
            <GroupBox Header="File Generation Options" Margin="10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- First Row -->
                    <Label Content="Output Format:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                    <ComboBox x:Name="OutputFormatComboBox" Grid.Row="0" Grid.Column="1" Margin="0,0,20,0">
                        <ComboBoxItem Content="XML" IsSelected="True"/>
                        <ComboBoxItem Content="TXT"/>
                    </ComboBox>

                    <Label Content="Mode:" Grid.Row="0" Grid.Column="2" Margin="0,0,10,0"/>
                    <ComboBox x:Name="ModeComboBox" Grid.Row="0" Grid.Column="3">
                        <ComboBoxItem Content="Test" IsSelected="True"/>
                        <ComboBoxItem Content="Production"/>
                    </ComboBox>

                    <!-- Second Row -->
                    <Label Content="Generate MailIds:" Grid.Row="1" Grid.Column="0" Margin="0,10,10,0"/>
                    <ComboBox x:Name="GenerateMailIdsComboBox" Grid.Row="1" Grid.Column="1" Margin="0,10,20,0">
                        <ComboBoxItem Content="No" IsSelected="True"/>
                        <ComboBoxItem Content="Yes"/>
                    </ComboBox>

                    <Label Content="Generate PreSorting:" Grid.Row="1" Grid.Column="2" Margin="0,10,10,0"/>
                    <ComboBox x:Name="GeneratePresortingComboBox" Grid.Row="1" Grid.Column="3" Margin="0,10,0,0">
                        <ComboBoxItem Content="Yes" IsSelected="True"/>
                        <ComboBoxItem Content="No"/>
                    </ComboBox>

                    <Label Content="Sorting Mode:" Grid.Row="1" Grid.Column="4" Margin="0,10,10,0"/>
                    <ComboBox x:Name="SortingModeComboBox" Grid.Row="1" Grid.Column="5" Margin="0,10,0,0">
                        <ComboBoxItem Content="Customer Order (CU)" IsSelected="True"/>
                        <ComboBoxItem Content="Print Order (PO)"/>
                    </ComboBox>
                </Grid>
            </GroupBox>
        </Expander>

      

        <Expander x:Name="MailRequestExpander" Grid.Row="1" Header="MailRequest" Margin="10" IsExpanded="True">
            <GroupBox Header="MailRequest" Margin="10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- First Row -->
                    <Label Content="Sender ID:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                    <ui:TextBox x:Name="SenderIdTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,20,0" Text="4493"/>

                    <Label Content="Account ID:" Grid.Row="0" Grid.Column="2" Margin="0,0,10,0"/>
                    <ui:TextBox x:Name="AccountIdTextBox" Grid.Row="0" Grid.Column="3" Text="73771"/>

                    <!-- Second Row -->
                    <Label Content="Mail Format:" Grid.Row="1" Grid.Column="0" Margin="0,10,10,0"/>
                    <ComboBox x:Name="MailFormatComboBox" Grid.Row="1" Grid.Column="1" Margin="0,10,20,0">
                        <ComboBoxItem Content="Small" IsSelected="True"/>
                        <ComboBoxItem Content="Large"/>
                    </ComboBox>

                    <Label Content="Priority:" Grid.Row="1" Grid.Column="2" Margin="0,10,10,0"/>
                    <ComboBox x:Name="PriorityComboBox" Grid.Row="1" Grid.Column="3" Margin="0,10,0,0">
                        <ComboBoxItem Content="NP" IsSelected="True"/>
                        <ComboBoxItem Content="P"/>
                    </ComboBox>

                    <!-- Third Row -->
                    <Label Content="Address Language:" Grid.Row="2" Grid.Column="0" Margin="0,10,10,0"/>
                    <ComboBox x:Name="LanguageComboBox" Grid.Row="2" Grid.Column="1" Margin="0,10,20,0">
                        <ComboBoxItem Content="nl" IsSelected="True"/>
                        <ComboBoxItem Content="fr"/>
                        <ComboBoxItem Content="en"/>
                    </ComboBox>

                    <Label Content="Expected Delivery:" Grid.Row="2" Grid.Column="2" Margin="0,10,10,0"/>
                    <DatePicker x:Name="DeliveryDatePicker" Grid.Row="2" Grid.Column="3" Margin="0,10,0,0"/>

                    <!-- Fourth Row -->
                    <Label Content="Deposit Type:" Grid.Row="3" Grid.Column="0" Margin="0,10,10,0"/>
                    <ComboBox x:Name="DepositTypeComboBox" Grid.Row="3" Grid.Column="1" Margin="0,10,20,0">
                        <ComboBoxItem Content="depositRef" IsSelected="True"/>
                        <ComboBoxItem Content="tempDepositRef"/>
                        <ComboBoxItem Content="N"/>
                    </ComboBox>

                    <Label Content="Deposit Identifier:" Grid.Row="3" Grid.Column="2" Margin="0,10,10,0"/>
                    <ui:TextBox x:Name="DepositIdentifierTextBox" Grid.Row="3" Grid.Column="3" Margin="0,10,0,0"/>

                    <Label Content="Sequence Number:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                    <ui:TextBox x:Name="SequenceNumberTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,20,0" Text="01"/>

                    <Label Content="Mailing Reference:" Grid.Row="3" Grid.Column="2" Margin="0,10,10,0"/>
                    <ui:TextBox x:Name="MailingReferenceTextBox" Grid.Row="3" Grid.Column="3" Margin="0,10,0,0"/>
                </Grid>
            </GroupBox>
        </Expander>

        <!-- Action panel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <ui:Button x:Name="UploadFileBtn" Content="Upload File" Click="UploadFileBtn_Click" 
                Width="100" Height="30" Margin="0,0,10,0"/>
            <ui:Button x:Name="ValidateDataBtn" Content="Validate Data" Click="ValidateDataBtn_Click" 
                Width="100" Height="30" Margin="0,0,10,0" IsEnabled="False"/>
            <ui:Button x:Name="GenerateMailingListBtn" Content="Generate Mailing List" 
                Click="GenerateMailingListBtn_Click" Width="120" Height="30" IsEnabled="False"/>
        </StackPanel>


        <!-- TabControl Section -->
        <TabControl x:Name="DatagridsTabs"  Grid.Row="3" Visibility="Collapsed">
            <!-- Tab for DataGrid -->
            <TabItem Header="Data">
                <ui:DataGrid Name="FileContentGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Row" Binding="{Binding Index}" Width="*" />
                        <DataGridTextColumn Header="Contact" Binding="{Binding AddressDetails.Contact}" Width="*" />
                        <DataGridTextColumn Header="Street" Binding="{Binding AddressDetails.Street}" Width="*" />
                        <DataGridTextColumn Header="PostalCode" Binding="{Binding AddressDetails.PostalCode}" Width="*" />
                        <DataGridTextColumn Header="City" Binding="{Binding AddressDetails.City}" Width="*" />
                        <DataGridTextColumn Header="ValidationStatus" Binding="{Binding Validation.Status}" Width="*" />

                    </DataGrid.Columns>
                </ui:DataGrid>
            </TabItem>

            <!-- Tab for Errors -->
            <TabItem Header="Errors">
                <ui:DataGrid Name="ErrorGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Row" Binding="{Binding Index}" Width="*" />
                        <DataGridTextColumn Header="AddressDetails" Binding="{Binding AddressDetails}" Width="*" />
                        <DataGridTextColumn Header="Errors" Binding="{Binding Validation}" Width="*" />
                        
                    </DataGrid.Columns>
                </ui:DataGrid>
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
