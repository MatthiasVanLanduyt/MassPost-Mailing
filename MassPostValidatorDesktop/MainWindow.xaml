<Window x:Class="MassPostValidatorDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassPostValidatorDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Layout Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Top for Buttons -->
            <RowDefinition Height="*" />
            <!-- Bottom for DataGrid -->
        </Grid.RowDefinitions>

        <!-- File Upload Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <Button x:Name="UploadFileBtn" Content="Upload File" Width="100" Margin="5"
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Click="UploadFileBtn_Click" />
            <TextBlock Text="Supported formats: .txt, .csv" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Button x:Name="ValidateDataBtn" Content="Validate Data" Width="120" Margin="5"
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Click="ValidateDataBtn_Click" />
        </StackPanel>



        <!-- TabControl Section -->
        <TabControl Grid.Row="1">
            <!-- Tab for DataGrid -->
            <TabItem Header="Data">
                <DataGrid Name="FileContentGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Row" Binding="{Binding Index}" Width="*" />
                        <DataGridTextColumn Header="Contact" Binding="{Binding AddressDetails.Contact}" Width="*" />
                        <DataGridTextColumn Header="Street" Binding="{Binding AddressDetails.Street}" Width="*" />
                        <DataGridTextColumn Header="PostalCode" Binding="{Binding AddressDetails.PostalCode}" Width="*" />
                        <DataGridTextColumn Header="City" Binding="{Binding AddressDetails.City}" Width="*" />
                        <DataGridTextColumn Header="ValidationStatus" Binding="{Binding Validation.Status}" Width="*" />

                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Tab for Errors -->
            <TabItem Header="Errors">
                <DataGrid Name="ErrorGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Row" Binding="{Binding Index}" Width="*" />
                        <DataGridTextColumn Header="AddressDetails" Binding="{Binding AddressDetails}" Width="*" />
                        <DataGridTextColumn Header="Errors" Binding="{Binding Validation}" Width="*" />
                        
                    </DataGrid.Columns>
                </DataGrid>
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
